<body>
  <!-- HTML code here -->
  <%- include("partials/navbar", {page: "views" }) %>

    <section id="view">
      <div class="container">
        <div class="header">
          <p class="section-title2">
            View All Data Of The Database
          </p>
          <form method="GET" action="/view">
            <% if (placeholder) { %>
              <input type="text" name="search" id="search" placeholder="Search" value="<%= placeholder %>">
              <% } else { %>
                <input type="text" name="search" id="search" placeholder="Search">
                <% } %>
                  <input class="button-dark" type="submit" value="Search">
          </form>
        </div>
        <table>
          <thead>
            <tr>
              <th class="first-column">#</th>
              <th>Artist</th>
              <th>Song</th>
              <th>Album</th>
            </tr>
          </thead>
          <tbody>
            <% rows.forEach((row, index)=> { %>
              <tr>
                <td class="first-column">
                  <%= index+1 %>
                </td>
                <td>
                  <%= row.Artist %>
                </td>
                <td>
                  <%= row.Song %>
                </td>
                <td>
                  <%= row.Album %>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>

    </section>


    <%- include("partials/footer.ejs") %>

      <!-- SCRIPTS -->
      <script src="https://kit.fontawesome.com/ad98de5722.js" crossorigin="anonymous"></script>
      <script type="text/javascript" src="/javascripts/script.js"></script>
      <!-- SCRIPTS -->
</body>
